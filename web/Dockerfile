FROM node:20-alpine AS build
WORKDIR /app
COPY package.json pnpm-lock.yaml* ./
RUN corepack enable && corepack prepare pnpm@latest --activate
RUN pnpm install
COPY . .
RUN pnpm build

FROM node:20-alpine
WORKDIR /app
COPY --from=build /app/dist ./dist
COPY package.json .
RUN corepack enable && corepack prepare pnpm@latest --activate
RUN pnpm add serve
EXPOSE 3000
CMD ["pnpm","serve","-s","dist","-l","3000"]

